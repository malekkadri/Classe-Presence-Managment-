{% extends 'baseback.html.twig' %}

{% block title %}Classe index{% endblock %}

{% block body %}
    <h1>Classe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>idClasse</th>
                <th>Nom</th>
                <th>Nombre</th>
                <th>Niveau</th>
                <th>Filiere</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for classe in classes %}
            <tr>
                <td>{{ classe.idClasse }}</td>
                <td>{{ classe.nom }}</td>
                <td>{{ classe.nombre }}</td>
                <td>{{ classe.niveau }}</td>
                <td>{{ classe.filiere }}</td>
                
                <td>
                        {# <button type="button" class="btn btn-info"<a href="{{ path('app_classe_show', {'id': classe.idClasse}) }}">show</a></button> #}
                   <button type="button" class="btn btn-warning"> <a href="{{ path('app_classe_edit', {'id': classe.idClasse}) }}">edit</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button type="button" class="btn btn-light"><a href="{{ path('app_classe_new') }}">Create new</a></button>
{% endblock %}
